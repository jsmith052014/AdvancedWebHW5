@model IEnumerable<SmithJessicaHW5.Models.Movie>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<p>Movie Count: </p>
@{var MovieCount = Model.Count();}
 @Html.DisplayFor(modelItem => MovieCount)

<p>
    @if(User.IsInRole("Admin"))
    {
        @Html.ActionLink("Create New", "Create")
    }
</p>
<table class ="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LengthInMinutes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Format)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsFavorited)
        </th>
        <th>
            Actors
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Year)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LengthInMinutes)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Format)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rating)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsFavorited)
        </td>
        @{var ActorCount = item.Actors.Count();}
        <td>
            @Html.DisplayFor(modelItem => ActorCount)
        </td>
        <td>
             @Html.ActionLink("Details", "Details", new { id=item.Id })
             @if(User.IsInRole("Admin"))
             {
                @:|
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) @:|
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
             }

            
        </td>
    </tr>
}

</table>
